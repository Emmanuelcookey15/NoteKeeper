<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_height="wrap_content" app:contentPadding="16dp" app:cardElevation="4dp"
            app:cardCornerRadius="4dp" app:cardUseCompatPadding="true" android:id="@+id/card_view"
            android:layout_width="match_parent">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_assignment_black"
                    android:id="@+id/imageView2" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:tint="@color/pluralsiht_orange"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/text_course"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAppearance="@style/CourseTitle"
                    app:layout_constraintStart_toEndOf="@+id/imageView2" android:layout_marginStart="8dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/text_title"
                    app:layout_constraintTop_toBottomOf="@+id/text_course"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    app:layout_constraintStart_toEndOf="@+id/imageView2" android:layout_marginStart="8dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>